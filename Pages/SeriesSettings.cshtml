@page "/series/{id?}/settings"
@model SeriesSettingsModel
@{
    ViewData["Title"] = "Series Settings";
}

<main>
    <form method="post">
        <input type="hidden" asp-for="Series.ID" />
        <div class="space-y-12">
            <div class="border-b border-gray-900/10 pb-12">
                <h2 class="text-base font-semibold leading-7 text-gray-900">General information</h2>
                <p class="mt-1 text-sm leading-6 text-gray-600">General information about the series.</p>

                <div class="mt-10 grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6">
                    <div class="sm:col-span-3">
                        <label for="Series.Name" class="block text-sm font-medium leading-6 text-gray-900">Name</label>
                        <div class="mt-2">
                            <input type="text" asp-for="Series.Name" required
                                class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
                        </div>
                    </div>

                    <div class="sm:col-span-3">
                        <label for="Series.AuthorName" class="block text-sm font-medium leading-6 text-gray-900">Author Name</label>
                        <div class="mt-2">
                            <input type="text" asp-for="Series.AuthorName" required
                                class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
                        </div>
                    </div>

                    <div class="sm:col-span-4">
                        <label for="Series.CoverImageUrl" class="block text-sm font-medium leading-6 text-gray-900">Cover URL</label>
                        <div class="mt-2">
                            <input type="url" asp-for="Series.CoverImageUrl" required
                                class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
                        </div>
                    </div>

                    <div class="sm:col-span-2">
                        <label for="Series.Active" class="block text-sm font-medium leading-6 text-gray-900">Status</label>
                        <div class="mt-2">
                            <select asp-for="Series.Active" class="block w-full rounded-md border-0 py-1.5 pl-3 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:max-w-xs sm:text-sm sm:leading-6">
                                <option value="true">Active</option>
                                <option value="false">Not active</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>

            <div class="border-b border-gray-900/10 pb-12">
                <h2 class="text-base font-semibold leading-7 text-gray-900">Page Crawl Information</h2>
                <p class="mt-1 text-sm leading-6 text-gray-600">Information needed to crawl the page.</p>

                <div class="mt-10 grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6">
                    <div class="col-span-full">
                        <label for="Series.TocUrl" class="block text-sm font-medium leading-6 text-gray-900">TOC Url</label>
                        <div class="mt-2">
                            <input type="url" asp-for="Series.TocUrl" required
                                class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600  disabled:cursor-not-allowed disabled:bg-gray-50 disabled:text-gray-500 disabled:ring-gray-200 sm:text-sm sm:leading-6">
                        </div>
                    </div>
                    
                    <div class="sm:col-span-3">
                        <label for="Series.TemplateID" class="block text-sm font-medium leading-6 text-gray-900">Template</label>
                        <div class="mt-2">
                            <select asp-for="Series.TemplateID"
                                class="block w-full rounded-md border-0 py-1.5 pl-3 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:max-w-xs sm:text-sm sm:leading-6">
                                <option value="">custom</option>
                                @foreach(var template in Model.Templates) {
                                    <option value="@template.ID">@template.Name</option>
                                }
                            </select>
                        </div>
                    </div>

                    <div class="sm:col-span-2 sm:col-start-1">
                        <label for="Series.TocSelector" class="block text-sm font-medium leading-6 text-gray-900">TOC Selector</label>
                        <div class="mt-2">
                            <input type="text" asp-for="Series.TocSelector" required
                                class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600  disabled:cursor-not-allowed disabled:bg-gray-50 disabled:text-gray-500 disabled:ring-gray-200 sm:text-sm sm:leading-6">
                        </div>
                    </div>

                    <div class="sm:col-span-2">
                        <label for="Series.TitleSelector" class="block text-sm font-medium leading-6 text-gray-900">Title Selector</label>
                        <div class="mt-2">
                            <input type="text" asp-for="Series.TitleSelector" required
                                class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600  disabled:cursor-not-allowed disabled:bg-gray-50 disabled:text-gray-500 disabled:ring-gray-200 sm:text-sm sm:leading-6">
                        </div>
                    </div>

                    <div class="sm:col-span-2">
                        <label for="Series.ContentSelector" class="block text-sm font-medium leading-6 text-gray-900">Content Selector</label>
                        <div class="mt-2">
                            <input type="text" asp-for="Series.ContentSelector" required
                                class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600  disabled:cursor-not-allowed disabled:bg-gray-50 disabled:text-gray-500 disabled:ring-gray-200 sm:text-sm sm:leading-6">
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="mt-6 flex items-center justify-end gap-x-6">
            <button onclick="window.location.href='/index'" type="button" class="text-sm font-semibold leading-6 text-gray-900">Cancel</button>
            <button type="submit"
                class="rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">Save</button>
        </div>
    </form>
</main>

@section Scripts {
    <script>
        const templateSelect = document.querySelector('#Series_TemplateID');
        const tocSelector = document.querySelector('#Series_TocSelector');
        const titleSelector = document.querySelector('#Series_TitleSelector');
        const contentSelector = document.querySelector('#Series_ContentSelector');

        const updateInputs = () => {
            if(templateSelect.value !== '') {
                tocSelector.disabled = true;
                titleSelector.disabled = true;
                contentSelector.disabled = true;
            } else {
                tocSelector.disabled = false;
                titleSelector.disabled = false;
                contentSelector.disabled = false;
            }
        }

        templateSelect.addEventListener('change', updateInputs);

        updateInputs();
    </script>
}
@page
@model SettingsModel
@{
    ViewData["Title"] = "Settings";
}

<main>
    <form method="post">
        <input type="hidden" asp-for="Setting.ID" />

        <div class="space-y-12">
            <div class="pb-12">
                <h2 class="text-base font-semibold leading-7 text-gray-900">Email Settings</h2>
                <p class="mt-1 text-sm leading-6 text-gray-600">Information to send emails to your kindle email address.
                </p>

                <div class="mt-10 grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6">
                    <div class="sm:col-span-4">
                        <label for="Setting.SMTPHost" class="block text-sm font-medium leading-6 text-gray-900">SMTP Host</label>
                        <div class="mt-2">
                            <input type="text" asp-for="Setting.SMTPHost"
                                class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
                        </div>
                    </div>

                    <div class="sm:col-span-2">
                        <label for="Setting.SMTPPort" class="block text-sm font-medium leading-6 text-gray-900">SMTP Port</label>
                        <div class="mt-2">
                            <input type="number" asp-for="Setting.SMTPPort"
                                class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
                        </div>
                    </div>

                    <div class="sm:col-span-3">
                        <label for="Setting.SMTPUser" class="block text-sm font-medium leading-6 text-gray-900">SMTP User</label>
                        <div class="mt-2">
                            <input type="text" asp-for="Setting.SMTPUser"
                                class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
                        </div>
                    </div>

                    <div class="sm:col-span-3">
                        <label for="Setting.SMTPPassword" class="block text-sm font-medium leading-6 text-gray-900">SMTP Password</label>
                        <div class="mt-2">
                            <input type="text" asp-for="Setting.SMTPPassword"
                                class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
                        </div>
                    </div>

                    <div class="sm:col-span-3">
                        <label for="Setting.EmailFrom" class="block text-sm font-medium leading-6 text-gray-900">From Email</label>
                        <div class="mt-2">
                            <input type="text" asp-for="Setting.EmailFrom"
                                class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
                        </div>
                    </div>

                    <div class="sm:col-span-3">
                        <label for="Setting.KindleEmail" class="block text-sm font-medium leading-6 text-gray-900">Kindle Email</label>
                        <div class="mt-2">
                            <input type="text" asp-for="Setting.KindleEmail"
                                class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="mt-6 flex items-center justify-end gap-x-6">
            <button type="submit"
                class="rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">Save</button>
        </div>
    </form>
</main>
